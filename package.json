{
  "name": "@beer-digital/lipsync-engine",
  "version": "1.0.0",
  "description": "Production-grade, renderer-agnostic streaming lip-sync engine for browser-based 2D animation. Real-time viseme detection from streaming audio via AudioWorklet + Web Audio API.",
  "type": "module",
  "main": "dist/lipsync-engine.cjs",
  "module": "dist/lipsync-engine.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lipsync-engine.js",
      "require": "./dist/lipsync-engine.cjs",
      "types": "./dist/index.d.ts"
    },
    "./worklet": "./dist/worklet/streaming-processor.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build && npm run build:worklet && npm run build:types",
    "build:worklet": "cp src/worklets/streaming-processor.js dist/worklet/streaming-processor.js",
    "build:types": "cp src/types.d.ts dist/index.d.ts",
    "dev": "vite serve demo --port 3000 --open",
    "preview": "vite preview",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "demo:realtime": "node server.js"
  },
  "keywords": [
    "lip-sync",
    "lipsync",
    "viseme",
    "audio",
    "animation",
    "audioworklet",
    "web-audio",
    "streaming",
    "real-time",
    "2d-animation",
    "avatar",
    "tts",
    "speech"
  ],
  "author": "Beer Digital LLC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/beer-digital/lipsync-engine"
  },
  "devDependencies": {
    "express": "^4.21.0",
    "ws": "^8.18.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0",
    "eslint": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "Chrome >= 66",
    "Firefox >= 76",
    "Safari >= 14.1",
    "Edge >= 79"
  ]
}
